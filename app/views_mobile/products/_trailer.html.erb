<% if trailer.class.name == 'StreamingTrailer' %>
<div id='content_trailer'>
  <video id='my_video_1' class='video-js vjs-default-skin' width='290' height='132'  src='<%= DVDPost.hls_url(@product.tokens_trailers.first.token, trailer.languages.by_language(:fr).first.short_alpha, trailer.subtitles.count > 0 ? trailer.subtitles.by_language(:fr).first.short_alpha : 'non') %>' controls='controls' data-setup='{}'></video>
</div>
<% else %>


<div id='content_trailer'>
<p>
  <video id="my_video_1" class="video-js vjs-default-skin" controls
    preload="auto" width="320" height="132" 
    data-setup="{}">
    <source src="<%= trailer.remote_id %>" type='video/mp4'>
  </video>
</p>
<div id='pagination'>
<%= will_paginate trailers, :class => 'products-pagination', :previous_label => '«', :next_label => '»', :param_name => 'trailer_page', :id => 'trailer_pagination' if trailers %>
</div>
</p>
</div>
<% end %>