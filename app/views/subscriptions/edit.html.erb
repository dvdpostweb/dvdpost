<% if current_customer.new_price? %>
<div id='hp-content'>
  <!-- BIENVENUE  -->
  <!-- user info -->
  <div id="header_pricing" class="clearfix">
    <p align="center"> <%= image_tag "#{I18n.locale.to_s}/title_formula.jpg"%> </p>
    <div class="new_abo_left">
    <table width="400" cellspacing="0" cellpadding="0" border="0" class="new_table_abo" align="center">
      <tbody>
        <tr class="new_abo_actuel">
          <td width="20"></td>
          <td width="240"><b>
          <%= subscription_description(current_customer, true) %><br />
          <% unless current_customer.svod? %>
            <span class="formula_nomination"><%= abo_type(current_customer, false, true, true) %> </td>
            <td align="right"><%= image_tag "pricing#{current_customer.credit_per_month}.png", :align => "absmiddle" %> </td>
          <% end %>
          <td width="20"></td>
        </tr>
      </tbody>
    </table></div>
    <div class="new_abo_right">
      <%= t '.description' %>
    </div>
    <div class="clear"></div>
  </div>
  <div id="pricing">
    <h2 id="formula" class="maven"><%= t '.all_formula' %></h2>
     <% form_for(:customer, :url => customer_subscription_path(:customer_id => current_customer.to_param), :id => :form_account, :html => {:method => :put}) do |f| %>
        <%= f.hidden_field :next_abo_type_id %>
      <table width="680" cellspacing="0" cellpadding="0" border="0" class="new_table_abo" align="left">
        <tbody>
          <%= render :partial => 'subscriptions/edit/new_abo', :collection => @list_abo, :locals => {:current_abo_credit => current_customer.credit_per_month, :selected_abo => current_customer.abo_type_id, :free_upgrade => @free_upgrade}%>
        </tbody>
      </table>
      <div align="left" >
        <button type="submit" class="button_confirm_rec"><%= t '.confirm' %></button>
      </div>
     <% end %>
     <div style="margin:20px 45px; font-size:10px">* <%= t('.send') %></div>
  </div>
<% else %>
<div class="upgrade">
  <table  cellspacing="0" cellpadding="0" border="0" >
    <tbody>
      <tr>
        <td valign="top"><span class="title_formule"><%= t('.formula').upcase %></span>
          <table width="220" height="114" cellspacing="0" cellpadding="0" border="0" class="abo_actu_sub">
            <tbody>
              <tr>
                <td valign="top"><span class="text_nb_movie">
                <%= current_customer.new_price? ? "#{t '.film' , :count => current_customer.credit_per_month} <br />dont #{current_customer.subscription_type.qty_dvd_max} DVD/bluray" : t('.film' , :count => current_customer.credit_per_month) %>
                <br />
                  <span class="text_prices"><strong>â‚¬ <%= current_customer.price_per_month %></strong></span></td>
              </tr>
            </tbody>
          </table></td>
        <td > <%= t '.description' %> </td>
      </tr>
    </tbody>
  </table>
  <p class="title_formule"><%= t '.choose' %> :</p>
  <% form_for(:customer, :url => customer_subscription_path(:customer_id => current_customer.to_param), :id => :form_account, :html => {:method => :put}) do |f| %>
    <%= f.hidden_field :next_abo_type_id %>

    <table  cellspacing="0" cellpadding="0" border="0" class="table_abo_upgrade"  width="540"  >
    <tbody>
      <%= render :partial => 'subscriptions/edit/abo', :collection => @list_abo, :locals => {:current_abo_credit => current_customer.credit_per_month, :selected_abo => current_customer.abo_type_id, :free_upgrade => @free_upgrade}%>
    </tbody>
    </table>
      <div align='center' style="width:920px; height:50px"><button type="submit" class="button_confirm"><%= t '.confirm' %></button></div>
  <% end %>
<% end %>  
  <div style='display:none'>
    <div id='div_selected'>2</div>
    <div id='error2'><%= t '.abo_missing' %></div>
  </div>
</div>
