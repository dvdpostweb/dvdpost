<div style="margin: 25px; width:900px">
  <h1><%= t '.title' %></h1>
  <div class="clearfix" id="sale-info">
    <div class="left">
      <ul>
        <li id="films">
          <h4><%= t '.q1' %></h4>
          <p><%= t '.r1' %></p>
        </li>
        <li id="prix">
          <h4><%= t '.q2' %></h4>
          <p><%= t '.r2' %></p>
        </li>
      </ul>
    </div>
    <!-- .left -->
    <div class="right">
      <ul>
        <li id="qualite">
          <h4><%= t '.q3' %></h4>
          <p><%= t '.r3' %></p>
        </li>
        <li id="livraison">
          <h4><%= t '.q4' %></h4>
          <p><%= t '.r4' %></p>
        </li>
      </ul>
    </div>
  </div>
  <div class="clearfix" id="livraison-info">
    <h4><%= t '.q5' %></h4>
    <table cellpadding="0" cellspacing="0" border="0" class="livraison-info">
      <tr class="livraison_price" style="display:table-row">
        <td>1 - 2 DVD/Blu-ray</td>
        <td class="price">2,80 €</td>
      </tr>
      <tr  class="livraison_price" style="display:table-row">
        <td>3 - 20 DVD/Blu-ray</td>
        <td class="price">6,70 €</td>
      </tr>
      <tr  class="livraison_price" style="display:table-row">
        <td>> 20 DVD/Blu-ray</td>
        <td class="price">0 €</td>
      </tr>
    </table>
  </div>
</div>
