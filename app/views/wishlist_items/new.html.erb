<% test = @wishlist_item.product.good_language?(DVDPost.product_languages[I18n.locale]) %>
<div id="addwishlist_title" class="content-wishlist">
  <%= "#{@wishlist_item.product.title} (#{@wishlist_item.product.year})" %> 
  <%= image_tag "3d_icon.png" if @wishlist_item.product.bluray3d? %>
  <%= image_tag "3d2d_icon.png" if @wishlist_item.product.bluray3d2d? %>
</div>
<% if @wishlist_item.product.streaming? && streaming_access? %> 
<div id="addwishlist_vod">
  <p id="vod">
    <%= t '.title' %>
  </p>
  <% if @wishlist_item.product.streaming? %>
  <div class="availability streaming">
      <% @token = current_customer.get_token(@wishlist_item.product.imdb_id) %>
      <%= render :partial => 'products/streaming', :locals => {:product => @wishlist_item.product, :token => @token} %>
  </div>
  <% end %>
  <div id="vodadd" >
    <%= render :partial => 'products/vod_list', :locals => {:product => @wishlist_item.product} %>  </div> 
  <div class="clear"></div>
  <br />
  <div align="center" id="informations">
    <%= link_to t('.faq'), streaming_products_faq_path(), :target => "_blank" %>
  </div>
</div>
<% end %>
<% unless @wishlist_item.product.vod?  %>
  <div id="addwishlist_explain">
    <%= t '.intro' %>
  </div>
  <% form_for @wishlist_item do |f| %>
    <fieldset>
      <%= f.hidden_field :product_id %>
      <%= f.hidden_field :wishlist_source_id, :value => params[:source] %>
      <%= hidden_field_tag :submit_id, @submit_id %>
      <%= hidden_field_tag :text, @text %>
      <%= hidden_field_tag :type, :classic %>
      <%= hidden_field_tag :load_color, params[:load_color] %>
    
      <% if @serie_id.to_i > 0 %>
        <%= hidden_field_tag :serie_id, @serie_id %>
      <% end %>
      <table align="center">
        <tr>
          <td width="100" align="center">
            <%= f.label :priority_1, image_tag('high.gif', :alt => 'High'), :title => 'priority high' %>
          </td>
          <td width="100" align="center">
            <%= f.label :priority_2, image_tag('med.gif', :alt => 'Medium'), :title => 'priority medium' %>
          </td>
          <td width="100" align="center">
            <%= f.label :priority_3, image_tag('low.gif', :alt => 'Low'), :title => 'priority low' %>
          </td>
        </tr>
        <tr>
          <td width="100" align="center">
            <%= f.radio_button :priority, '1', :checked => DVDPostConfig[:default_wishlist_priority] == :high, :title => 'priority high' %>
          </td>
          <td width="100" align="center">
            <%= f.radio_button :priority, '2', :checked => DVDPostConfig[:default_wishlist_priority] == :medium, :title => 'priority medium' %>
          </td>
          <td width="100" align="center">
            <%= f.radio_button :priority, '3', :checked => DVDPostConfig[:default_wishlist_priority] == :low, :title => 'priority low' %>
          </td>
        </tr>
      </table>
    </fieldset>
    
    <% if @wishlist_item.product.bluray? && current_customer.customer_attribute && current_customer.customer_attribute.bluray_owner == 0 %>
      <div id ='attention_bluray'>
        <p><%= t('.bluray_owner', :link_bluray => DVDPost.bluray_link[I18n.locale], :bluray_owner_path => bluray_owner_path) %></p>
      </div> 
    <% end %>
    <% if (@wishlist_item.product.bluray3d? || @wishlist_item.product.bluray3d2d?) && current_customer.customer_attribute && current_customer.customer_attribute.bluray_owner != 2 %>
      <div id ='attention_bluray'>
        <p><%= t('.bluray3d_owner', :link_bluray => DVDPost.bluray_link[I18n.locale], :bluray_owner_path => bluray_owner_path(:value => 2)) %></p>
      </div> 
    <% end %>
    <% unless test %>
      <div id ='attention_langues'><p><%= t '.error_language' %></p>
    <% end %>
    <p class="align" id="add_to_wishlist">
    <% type_button = @wishlist_item.product.next.to_i == 1 ? :reserve : :normal %>
    <% media = DVDPost.product_types.invert[@wishlist_item.product.media] %>
    <%= f.submit title_add_to_wishlist(:long, type_button, media), :class => 'item', :title => title_add_to_wishlist(:long, type_button, media) %>
    <%= f.submit title_add_all_to_wishlist(type_button), :class => 'serie', :name => 'add_all_from_series', :title => t('.add_serie') if @wishlist_item.product.series? %>
    </p>
    <% unless test %>
      </div>
    <% end %>
    <% if @wishlist_item.product.next == 1 && @wishlist_item.product.available_at %>
      <p class="align">
        <strong>
          <%= t '.available' %>
        </strong>
        <%= @wishlist_item.product.available_at.strftime("%d/%m/%Y") %>
      </p>
    <% end %>
  <% end %>
<% else %>
  <p align='center'><%= t '.not_available' %><p>
<% end %>