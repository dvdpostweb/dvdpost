<div class="<%= product_media_id(wishlist_item.product.media) %> clearfix">
  <div class="title">
    <%= link_to truncate(wishlist_item.product.title, :length => 65), product_path(:id => wishlist_item.product.to_param) %> 
    <%= image_tag 'oeil.gif', :alt => 'already seen', :class => 'oeil' if wishlist_item.already_rented == 'YES' %>
  </div>
  <% if wishlist_item.product.streaming? and streaming_access? %>  
    <div class="availability streaming">
        <% @token = current_customer.get_token(wishlist_item.product.imdb_id) %>
        <%= render :partial => 'products/streaming', :locals => {:product => wishlist_item.product, :token => @token} %>
    </div>
  <% else %>  
    <div class="availability">
      <%= wishlist_item.product.next == 1 && wishlist_item.product.available_at ? wishlist_item.product.available_at.strftime("%d/%m/%Y") : '&nbsp;' %>
    </div>
  <% end %>
  <ul class="HML" id="<%= wishlist_item.to_param %>">
    <%= render :partial => 'wishlist_items/index/priorities', :locals => {:wishlist_item => wishlist_item} %>
  </ul>
  <span class="trash">
    <%= link_to image_tag('trash-icon.gif', :alt => "trash : #{wishlist_item.product.title}"), wishlist_item_path(:id => wishlist_item.to_param), :title => "trash : #{wishlist_item.product.title}" %>
  </span>
</div>
