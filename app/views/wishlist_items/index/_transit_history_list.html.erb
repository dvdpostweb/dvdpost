<div class="box" id="on-way">
  <ul>
    <li class="first">
      <% if transit_items %>
        <h2>DVD chez vous ou en transit : <span><%= "#{transit_items.count} DVD" %></span></h2>
      <% elsif history_items %>
        <h2>History : <span><%= "#{history_items.count} DVD" %></span></h2>
      <% end %>
    </li>
    <li>
      <h2>Votre liste contient : <span><%= "#{wishlist_items_count} DVD" %></span></h2>
    </li>
  </ul>
  <div class="head clearfix">
    <div class="title">Titres</div>
    <div class="status">Statuts de mes locations</div>
  </div>
  <% if transit_items %>
    <%= render :partial => 'wishlist_items/index/transit_item', :collection => transit_items %>
  <% elsif history_items %>
    <%= render :partial => 'wishlist_items/index/history_item', :collection => history_items %>
  <% end %>  
</div>
