<div id="addwishlist_title"><%= t '.title' %></div>
<% form_for([@address, @customer], :url => customer_path(:id => @customer.to_param), :id => :form_account, :html => {:method => :put}) do |f| %>
  <table class="champ_compte" align="center" cellpadding="0" cellspacing="8" width="450">
    <tr>
      <td colspan="3">
        <%= error_messages_for :customer %>
      </td>
    </tr>
    <tr>
      <td width="171"></td>
      <td width="228" align="right" class="explain_text_gender">
        <p class="explain_text_gender">
          <span>
            <%= f.radio_button :gender, 'f' %><%= t '.miss' %>
          </span>
          <span>
            <%= f.radio_button :gender, 'm' %><%= t '.mister' %>
          </span>
        </p>
      </td>
      <td width="49"  align="left" class="explain_text_gender"></td>
    </tr>
    <tr>
      <td align="right">
        <span class="explain_text"><strong><%= t '.firstname' %> :</strong></span>
      </td>
      <td align="left">
        <span align="right">
          <%= f.text_field :first_name %>
        </span>
      </td>
      <td class="explain_text" align="left">
        <div id="check_firsname" class="step_input_ok"><div id="text"> </div> </div>
      </td>
    </tr>
    <tr>
      <td align="right">
        <span class="explain_text"><strong><%= t '.lastname' %> :</strong></span>
      </td>
      <td>
        <span align="left">
          <%= f.text_field :last_name %>
        </span>
      </p>						
    </td>
    <td width="49"  align="left" class="explain_text_gender"></td>
  </tr>
  <tr height="45">
    <td align="right">
      <strong><span class="explain_text"><%= t '.birthday' %> :</span></strong>
    </td>
    <td>
      <span align="left">
        <%= select_day @customer.birthday %>
        <%= select_month @customer.birthday, :use_month_numbers => true %>
        <%= select_year @customer.birthday, :start_year => 100.years.ago.year, :end_year => 18.years.ago.year %>
      </span>
    </td>
    <td class="explain_text" align="left">
      <div id="check_birthday" class="step_input_ok"><div id="text"> </div> </div>
    </td>
  </tr>
                
  <tr>
    <td align="right" class="identification" >
      <strong><span class="explain_text"><%= t '.phone' %> :</span></strong>
    </td>
    <td>
      <span align="left">
        <%= f.text_field :phone, :value => @customer.phone %>
      </span>
    </td>
    <td class="explain_text" align="left">
    </td>
  </tr>
  <% f.fields_for :address do |af| %>
  <tr>
  	<td align="right">
  		<strong>
  		  <span class="explain_text"><%= t '.street' %> :</span>
      </strong>
    </td>
    <td align="left">
  		<%= af.text_field :street %>
  	</td>
  </tr>
  <tr>
  	<td align="right">
  		<strong>
  		  <span class="explain_text"><%= t '.postal_code' %> :</span>
      </strong>
    </td>
    <td align="left">
  		<%= af.text_field :postal_code %>
  	</td>
  </tr>
  <tr>
  	<td align="right">
  		<strong>
  		  <span class="explain_text"><%= t '.city' %> :</span>
      </strong>
    </td>
    <td align="left">
  		<%= af.text_field :city %>
  	</td>
  </tr>
  <tr>
  	<td align="right">
  		<strong>
  		  <span class="explain_text"><%= t '.city' %> :</span>
      </strong>
    </td>
    <td align="left">
  		<%= af.text_field :first_name %>
  	</td>
  </tr>
  <tr>
  	<td align="right">
  		<strong>
  		  <span class="explain_text"><%= t '.city' %> :</span>
      </strong>
    </td>
    <td align="left">
  		<%= af.text_field :last_name %>
  		<%= af.hidden_field :customers_id, :value => @customer.to_param %>
  	</td>
  </tr>

  <% end %>
  <tr>
  
    <td colspan="3">  
      <p class="bouton_probleme" align="right">
        <%= submit_tag t('.create'),:id => "submit_account2", :class => "submit submit_#{I18n.locale}" %>
      </p>
    </td>
  </tr>               
</table>
<% end %>