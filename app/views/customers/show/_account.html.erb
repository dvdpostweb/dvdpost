<div id="gauche">
  <div id="title">
    <strong><%= t '.title' %></strong>
  </div> 
  <div id="content_gauche">
    <table cellpadding="1" cellspacing="0">
      <tr>
        <td width="203" align="right"><strong><%= t '.client_id' %></strong></td>
        <td width="258" align="left"><%= customer.to_param %></td>
      </tr>
      <tr>
        <td align="right"><strong><%= t '.identification' %></strong></td>
        <td align="left"><%= customer.email %></td>
      </tr>
      <tr>
        <td align="right"><strong><%= t '.last_name' %></strong></td>
        <td align="left"><%= customer.last_name %></td>
      </tr>
      <tr>
        <td align="right"><strong><%= t '.first_name' %></strong></td>
        <td align="left"><%= customer.first_name %></td>
      </tr>
      <tr>
        <td align="right" valign="top" class="adresse"></td>
        <td align="right" valign="top" id="modif">
          <ul>
            <li class="links">
              <%= link_to 'Modifier mon compte', edit_customer_path(), :class => 'modification_account' %>
            </li>
          </ul>
        </td>
      </tr>
      <tr>
        <td align="right" valign="top" class="adresse"><strong><%= t '.address' %></strong></td>
        <td align="left" valign="top" class="adresse">
          <%= customer.address.name %><br/>
          <%= customer.address.street %><br/>
          <%= "#{customer.address.postal_code} #{customer.address.city}" %>
        </td>
      </tr>
      <tr>
        <td align="right" valign="top" class="adresse"></td>
        <td align="right" valign="top" id="modif">
          <ul>
            <li class="links">
              <%= link_to 'Modifier mon adresse', edit_customer_addresses_path(:customer_id => current_customer), :class => 'modification_address' %>
            </li>
          </ul>
        </td>
      </tr>
      <tr>
        <td colspan="2"><div class="ligne"></div></td>
      </tr>
      <tr>
        <td align="right" class="adresse"><strong><%= t '.sponsorship_points' %></strong></td>
        <td align="left" class="adresse">
          <%= "#{customer.inviation_points} pts" %>
          <span><%= image_tag 'delimiter.gif' %></span>
          <%= link_to 'Parrainer un ami', nil, :class => 'modif' %>
        </td>
      </tr>
      <% if false %>
      <tr>
        <td align="right" class="adresse"><strong><%= t '.buy_dvds' %></strong></td>
        <td align="left" class="adresse">
          2 DVD
          <span><%= image_tag 'delimiter.gif' %></span>
          <%= link_to 'Voir mon achats', nil, :class => 'modif' %>
        </td>
      </tr>
      <% end %>
      <tr>
        <td align="right" class="adresse"><strong><%= t '.cotations' %></strong></td>
        <td align="left" class="adresse"><%= customer.ratings.count %></td>
      </tr>
      <tr>
        <td align="right"><strong><%= t '.critiques' %></strong></td>
        <td align="left"><%= customer.reviews.count %></td>
      </tr>
      <tr>
        <td align="right" class="adresse"><strong><%= t '.newsletters' %></strong></td>
        <td align="left" class="adresse">
          <div>
          <%= render :partial => 'customers/show/active', :locals => {:active => customer.newsletter, :type => 'newsletter'} %>
          </div>
        </td>
      </tr>
      <tr>
        <td align="right"><strong><%= t '.newsletters_partner' %></strong></td>
        <td align="left">
          <div>
          <%= render :partial => 'customers/show/active', :locals => {:active => customer.newsletter_parnter, :type => 'newsletter_parnter'} %>
          </div>
        </td>
      </tr>
    </table>
  </div>
  <% if false %>
  <div id="code_cado">
    <div id="title"><strong><%= t '.gift' %></strong><%= image_tag 'icon_info.png', :align => 'absmiddle' %></div>
    <div id="cado">
      <%= image_tag 'pack.png', :align => 'absmiddle' %>
      <%= link_to t('.gift_offer'), nil, :class => 'modif' %>
    </div>
    <div id="code">
      <form>
        <input name="" class="code_text" value="<%= t '.active_gift'%>" size="15" type="text">
    </div><!-- WTF? closing a div here inside the form? -->
        <div>
          <input class="code_bouton"src="/images/bouton_go.png" type="image">
        </div>
      </form>
  </div>
  <% end %>
</div>
