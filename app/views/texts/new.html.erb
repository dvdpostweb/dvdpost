  <br />
  <br />
  <% end %>
  </div>
<% else %>
<div class="text_size">
<% form_for :texts, :url => theme_texts_path(params[:theme_id]) do |f| %>
  <h5>title</h5>
  fr :<%= text_field_tag :title_fr %>
  nl :<%= text_field_tag :title_nl %>
  en :<%= text_field_tag :title_en %><br />
