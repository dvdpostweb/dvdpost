<h2><%= @title %></h2>
<% if params[:landing_id] %>
  <div class="text_size">
  <% form_for :texts, :url => landing_texts_path(params[:landing_id]) do |f| %>
  <h5>title</h5>
  fr :<%= text_field_tag :title_fr %>
  nl :<%= text_field_tag :title_nl %>
  en :<%= text_field_tag :title_en %><br />
  <h5>description</h5>
  fr :<%= text_area_tag :name_fr,nil, :size => '90x4' %><br />
  nl :<%= text_area_tag :name_nl,nil, :size => '90x4' %><br />
  en :<%= text_area_tag :name_en,nil, :size => '90x4' %><br />
