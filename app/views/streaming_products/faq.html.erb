<%= stylesheet 'sponsorships', :media => :all %>
<%= javascript_include_tag 'streaming_products' %>

<div id="maincontent" >
  <div class="top"></div>
  <h2><%= t('.title') %></h2>
  <div id="tool-wrap">
    <div id="points-wrap">
      <div id="contact-wrap">
        <div id='faq'>
          <ul id='faq-nav'>
            <li>
              <ul>
                <% for n in 1..14 %>
                <li>
                  <%= link_to t(".q#{n}"), nil, :id => "q#{n}", :class => "q" %>
                </li>
                <% end %>
              </ul>
            </li>
          </ul>
          <% for n in 1..14 %>
          <div style="<%= n == 1 ? '' : 'display:none' %>" id="r<%= n %>" class="faq-answer">
            <h3><%= t(".q#{n}") %></h3>
            <div class="box">
              <p> 
                <%= t(".r#{n}", :stream_link => products_path(:view_mode => :streaming) , :reconduction_link =>  edit_customer_reconduction_path(:locale => I18n.locale, :customer_id => current_customer.to_param) , :connect_link => info_path(:page_name => 'get_connected')) %>
              </p>
            </div>
          </div>
          <% end %>
          <div class="clear"></div>
        </div>
      </div>
    </div>
  </div>
</div>