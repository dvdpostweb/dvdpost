<tr class="choose_color">
  <td class="choose_padding">
    <p>
      AUDIO : <%= kind.language.by_language(I18n.locale).first.name %> <br />
      <% if kind.subtitle.count > 0 %>
        <%= t '.subtitle' %> : <%= kind.subtitle.by_language(I18n.locale).first.name %>
      <% else %>
        <%= t '.without_subtitle' %>
      <% end %>
    </p>
  </td>
  <td align='center'>
    <% qualities = StreamingProduct.by_version(kind.language_id,kind.subtitle_id).ordered.find_all_by_imdb_id(kind.imdb_id) %>
    <% qualities.collect do | quality | %>
    <div class="<%= qualities.count > 1 ? 'quality_vod' : '' %>">
      <%= link_to t(".#{quality.quality.downcase}"), streaming_product_path(:streaming_product_id => quality.to_param), :class => "btn qualityvod", :id =>  quality.quality %>
    </div>
    <% end %>
  </td>
  <td>
    <div class="status_vod">
       <%= link_to t('.alert'), new_streaming_product_report_path(:streaming_product_id => params[:id],:reference_id => kind.to_param), :class => :connect_linkpc, :id => :report %>   
    </div>
  </td>  
</tr>
<tr class="choose_empty">
  <td></td>
</tr>