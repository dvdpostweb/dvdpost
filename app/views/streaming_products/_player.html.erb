<% if token %>
  <% token_code = token.token %>
<% else %> 
  <% if Token.dvdpost_ip?(request.remote_ip) %>
    <% if source == StreamingProduct.source[:alphanetworks] %>
      <% token_code = DVDPost.generate_token_from_alpha(filename) %>
    <% else %>
      <% token_code = 'dvdpost' %>
    <% end %>
  <% end %>
<% end %>

<%= flowplayer(filename, source, streaming, token_code) %>