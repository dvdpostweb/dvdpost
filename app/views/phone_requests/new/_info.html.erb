<ul>
	<li id="mail">
		<h4><%= t '.email.title' %></h4>
		<% if ENV['HOST_OK'] == "1" %>
		  <%= t '.email.text' %>
		  <%= mail_to "info@dvdpost.be" %>
		<% else %>
		  <%= link_to t('.private_message'), new_message_path(), :id => 'new_message' %>
		<% end %>
	</li>
	<li id="phone">
		<h4>
			<%= t '.phone.title' %>
		</h4>
		<%= t '.phone.text' %>
		<%= "<div id='alert_cust'>#{t('.alert_cust')}</div>".html_safe if @alert == true %>
	</li>
	<li id="fax">
		<h4>
			<%= t '.fax.title' %>
		</h4>
		<%= t '.fax.text' %>
	</li>
	<li id="courrier">
		<h4>
			<%= t '.snail.title' %>
		</h4>
		 <%= t '.snail.text' %> 
	</li>
	<li id="social">
		<h4><%= t '.media' %></h4>
		<%= link_to "Facebook", DVDPost.fb_url[I18n.locale],      :id => :fb,   :target => :_blank %>
    <%= link_to "Twitter",  twitter_url, :id => :tw,   :target => :_blank %>

	</li>
</ul>