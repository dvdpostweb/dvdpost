<ul>
  <li>
    <h3><%= t '.title' %></h3>
  </li>
  <li id="phone">
    <h4>
      <%= t '.phone.title' %>
    </h4>
    <%= t '.phone.text' %>
  </li>
  <li id="mail">
    <h4><%= t '.email.title' %></h4>
    <%= t '.email.text' %>
    <%= mail_to "info@dvdpost.be" %>
  </li>
  <li id="fax">
    <h4>
      <%= t '.fax.title' %>
    </h4>
    <%= t '.fax.text' %>
  </li>
  <li id="courrier">
    <h4>
      <%= t '.snail.mail' %>
    </h4>
    <%= t '.snail.text' %> 
  </li>
  <li id="social">
    <%= link_to "Blog",     blog_url,    :id => :blog, :target => :_blank %>
    <%= link_to "Facebook", fb_url,      :id => :fb,   :target => :_blank %>
    <%= link_to "Twitter",  twitter_url, :id => :tw,   :target => :_blank %>
    <%= link_to "Vimeo",    vimeo_url,   :id => :vm,   :target => :_blank %>
  </li>
</ul>