<div id="maincontent" >
  <div id="hp-article">
    <%= render :partial => "first", :locals => {:first_item => @chronicle} if @chronicle %>
    <!-- Sidebar nav -->
    <%= render :partial => "menu", :locals => {:categories => @categories} %>
  </div><!-- #hp-article --> 
  
  <!-- ANCIENS ARTICLES -->
  <div id="aa-wrap">
    <div id="carousel-wrap">
      <div class="ttl f-btn">ANCIENS ARTICLES</div>
      <ul id="carousel">
        <%= render :partial => 'article', :collection => @chronicles %>        
      </ul>
      <% if @nb_page > 1 %>
      <div id="carousel-nav">
        <span id="prev">
          <%= will_paginate @chronicles, :previous_label => 'Prev', :next_label => '', :page_links => false, :container => false %>
        </span>
         <%= "#{@page}/#{@nb_page}"%> 
        <span id="next">
        <%= will_paginate @chronicles, :previous_label => '', :next_label => 'Next', :page_links => false, :container => false %>
        </span>
      </div>
      <% end %>
    </div><!-- #carousel-wrap -->
  </div>
</div>
