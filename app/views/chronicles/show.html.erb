<!--   ==============   MAIN CONTENT   ==============   -->
<div id="maincontent" >
  <div id="articles-wrap">
  	<div id="content">
	    <%= image_rating(@chronicle.rating) if @chronicle.rating > 0 %>
      <h2><%= t("chronicles.menu.cat_#{@chronicle.category.to_param}") %> : <%= title = @chronicle.contents.by_language(I18n.locale).first.title %></h2>
      <p><em><%= @chronicle.contents.by_language(I18n.locale).first.subtitle %></em></p>
      <p>
        <%= @chronicle.contents.by_language(I18n.locale).first.full_description %>
      </p>
    </div><!-- #content -->
    <div id="left-sidebar">
      <% img = image_tag @chronicle.cover.url(:small), :width => 237 %>
    	<%=  @chronicle.imdb_id ? link_to(img, products_path(:imdb_id => @chronicle.imdb_id)) : img %>
      <div id="social-wrap">
        <% url = "http://public.dvdpost.com/#{I18n.locale}/chronicles/#{params[:id]}" %>
    		<div class="fb-like" data-href="<%= url %>" data-send="false" data-layout="box_count" data-width="100" data-show-faces="false" style='height:62px'></div>
    		<%= link_to "add to wish", products_path(:imdb_id => @chronicle.imdb_id), :class => "add #{I18n.locale}" if @chronicle.imdb_id %>
    		<% if @chronicle.imdb_id %>
    		  <% path = ENV['HOST_OK'] == "1" ? php_path('step1.php') : streaming_product_path(:id => @chronicle.imdb_id, :warning => 1) %>
    		  <%= link_to "regarder en vod", path, :class => "streaming #{I18n.locale}" if streaming_access? && @chronicle.streaming_products.available.count > 0 %>
    		<% end %>
      </div>
    </div><!-- #left-sidebar -->
  </div><!-- #articles-wrap --> 
  
</div>
<!--   ==============   END MAIN CONTENT   ==============   --> 
</div>
<% content_for :facebook do %>
    <meta property="og:image" content="<%= @chronicle.cover.url(:small) %>"/> 
    <meta property="og:type" content="article">
    <meta property="og:title" content="<%= "#{t('layouts.chronicles.title')} : #{title}" %>">
    <meta property="og:url" content="<%= url %>">
    <meta property="og:site_name" content="DVDPost"/>
    <meta property="fb:admins" content="542538810,586983921"/>
    <meta property="og:description" content="<%= @chronicle.contents.by_language(I18n.locale).first.description.gsub(/<\/?.*?>/, "") %>">
<% end %>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/fr_FR/all.js#xfbml=1&appId=254486224617136";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<% content_for :title do %>
  <%= "#{t('layouts.chronicles.title')} : #{title}" %>
<% end %>