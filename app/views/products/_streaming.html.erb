<% text = text || :long %>
<% if current_customer && ENV['HOST_OK'] == "0" %>
  <% if @tokens.include?(product.imdb_id)%>
    <%= link_to streaming_btn_title(:replay, text), streaming_product_path(:id => product.imdb_id), :class => "#{I18n.locale} regarder", :id => :watch, :title => t('.replay') %>
  <% else %>
    <%= link_to streaming_btn_title(:buy, text), new_product_token_path(:product_id => product.to_param, :imdb_id => product.imdb_id), :class => "streaming_action fr regarder", :id => :watch, :title => t('.buy') %>
  <% end %>
<% else %>
  <%= link_to streaming_btn_title(:buy, text), product_step_path(:product_id => product, :media => 'vod'), :class => "regarder", :id => :watch %>
<% end %>
