<div id="left_column">
  <!-- test -->
  <% form_for :search_filter, filter, {:url => search_filters_path(:view_mode => params[:view_mode], :list_id => params[:list_id], :category_id => params[:category_id], :actor_id => params[:actor_id], :director_id => params[:director_id], :studio_id => params[:studio_id], :filter => params[:filter]), :html => {:id => 'search'}} do |f| %>
