<!--   ==============   LEFT COLUMN   ==============   -->
<div id="leftcolumn">
  <% if ENV['HOST_OK'] == "1" %>
    <% form_for :search_filter, filter, {:url => search_filters_path(:view_mode => params[:view_mode], :list_id => params[:list_id], :category_id => params[:category_id], :actor_id => params[:actor_id], :director_id => params[:director_id], :filter => params[:filter], :studio_id => params[:studio_id])} do |f| %>
      <%= text_field_tag :search, (params[:search] || t('.search')), {:id => 'search-field'} %>
      <%= content_tag :button, t('.search'), {:type => :submit, :class => 'like-btn'} %>
    <% end %>
  <% end %>
  <% if params[:kind] == :normal %>
    <ul class="btns osc">
      <li><%= link_to 'collection cinéma', themes_path() %></li>
      <li><%= link_to t('.recommendations'), products_path(:view_mode => :recommended) %></li>
    </ul>
  <% end %>
  <% if streaming_access? %>
  <h3 class="ttl"><%= t('.streaming') %></h3>
  <ul class="nav osc">
    <%= left_column_vod(params) %>
  </ul>
  <% end %>
  <h3 class="ttl"><%= t('products.left_column.all_medias') %></h3>
  <ul class="nav osc">
  <%= left_column(params) %>
  </ul>
  <% if params[:kind] == :normal %>
  <h3 id="vod-adulte"><%= link_to t('.vod_adult'), products_path(:kind => :adult, :view_mode => :streaming) if streaming_access? %></h3>
  <% if current_customer %>
    <%= link_to image_tag('vente-flash-banner.png'), shop_path %>
  <% end %>
    <div id="nina-wrap">
      <h3>CHRONIQUE DE NINA</h3>
      <%= link_to image_tag("banner_nina#{I18n.locale == :nl ? '_nl' : ''}.png"), chronicles_path %>      
      <p>Qui parle de cinéma, Avec des critiques, Des focus, Des coups de coeur, Des films à découvrir, ... un regard différent sur le 7ème Art...</p>        
      <%= link_to 'VOIR TOUTES LES ARTICLES', chronicles_path, :class => 'more osc' %>
    </div>
  <% end %>
</div>
<!--   ==============   END LEFT COLUMN   ==============   -->