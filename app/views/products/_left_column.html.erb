<!--   ==============   LEFT COLUMN   ==============   -->
<div id="left_column" class="site_<%= ENV['HOST_OK'] %>">
  <!-- test -->
  <% form_for :search_filter, filter, {:url => search_filters_path(:view_mode => params[:view_mode], :list_id => params[:list_id], :category_id => params[:category_id], :actor_id => params[:actor_id], :director_id => params[:director_id])} do |f| %>
  <% if ENV['HOST_OK'] == "1" %>
    <%= text_field_tag :search, (params[:search] || t('.search')), {:id => 'search-field'} %>
    <%= content_tag :button, t('.search'), {:type => :submit, :class => 'like-btn'} %>
  <% end %>
  
    <ul id="left-nav">
      <li class="collections"><%= link_to 'collection cinÃ©ma', themes_path() %></li>
      <li class="recommandations"><%= link_to t('.recommendations'), products_path(:view_mode => :recommended) %></li>
      <% if streaming_access? %>
      <li id="catalogue_vod">
        <div id="catalogue_title_vod"><%= t('.streaming') %></div>
          <ul id="vod_list">
            <%= left_column_vod(params) %>
          </ul>
      </li>
      <% end %>
      <li id="catalogue_dvd">
        <div id="catalogue_title_dvd"><%= t('.all_medias') %></div>
        <ul id="dvd_list">
          <%= left_column(params) %>
        </ul>
      </li>
      <li class='adultvod'><%= link_to t('.vod_adult'), products_path(:kind => :adult, :view_mode => :streaming) if current_customer && streaming_access? %></li>
      <% if @shop_list && current_customer %>
        <li>
          <%= link_to image_tag(File.join(I18n.locale.to_s, 'bannerflashvente.png')), shop_path %>
        </li>
      <% end %>
    </ul>
    <%= render :partial => 'products/index/filters', :locals => {:countries => @countries, :filter => filter, :f => f} if params[:action] == 'index' %>
  <% end %>
</div>
<!--   ==============   END LEFT COLUMN   ==============   -->
