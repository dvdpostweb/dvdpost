<div class="numbers">
  <%= link_to t('.new_review'), new_product_review_path(:product_id => product.to_param), :id => 'add_new_review' if current_customer %>
  <%= "#{reviews_count} #{reviews_count == 1 ? t('.review') : t('.reviews')}" %>
</div>
<%= render :partial => 'products/show/review', :collection => reviews %>
<%= will_paginate reviews, :param_name => 'reviews_page',
                           :previous_label => "&laquo; #{t('.previous')}",
                           :next_label => "#{t('.next')} &raquo;",
                           :page_links => false,
                           :class => 'links',
                           :id => 'pagination' %>
