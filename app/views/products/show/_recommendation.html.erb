<% path = product_path(:id => recommendation.to_param, :recommendation => DVDPost.source_wishlist[:recommendation_product]) %>
<li>
  <div class="stars" id="rating-stars-<%= recommendation.to_param %>" product_id ="<%= recommendation.to_param %>">
    <%= render :partial => 'products/rating', :locals => {:product => recommendation, :background => :white, :size => :small} %>
  </div>
  <% link_to path, :class => product_media_id(recommendation.media) do %> 
    <%= product_image_tag recommendation.image, :width => 76, :height => 118, :alt => "#{recommendation.title} (#{recommendation.year})" %>
    <%= content_tag(:span, '', :class => 'new') if recommendation.is_new? %>
  <% end %>
  <%= render :partial => 'products/wishlist', :locals => {:product => recommendation, :text => :short, :source => DVDPost.source_wishlist[:recommendation_product]} %>
  <%= link_to recommendation.title, path, :class => 'more' %>
</li>