<div class="critique" id="critique<%= review.to_param%>">
  <div class="name">
    <span class="right"><%= "#{review.like_count} membres sur #{review.likeable_count} ont trouvés cette critique pertinente" %></span>
    <a href="#"><%= review.customers_name %></a>
    <span><img src="/images/delimiter.gif" alt="" /></span>
    <%= "Publié le #{review.created_at.strftime("%d/%m/%Y")}" %>
    <span class="stars">
      <% review.rating.times do %>
        <%= image_tag 'sm-star-on.png' %>
      <% end %>
      <% (5-review.rating).times do %>
        <%= image_tag 'sm-star-off.png' %>
      <% end %>
    </span>
  </div>
  <p><%= review.text %></p>
  <% 
	customer_rating=review.rating_by_customer(current_customer)
	if !customer_rating %>
  <p class="yn">Cette critique est-elle pertinente ? <%= link_to 'OUI',"#", :class=>'yes',:review_id=>review.reviews_id, :rate=>1 %> - <%= link_to 'NON',"#",:class=>"no",:review_id=>review.reviews_id,:rate=>0 %></p>
  <% else %>
	<%if customer_rating.value == 1 %>
		<p class="yn">vous trouvez cette critique pertinente</p>
	<% else %>
		<p class="yn">vous ne trouvez pas cette critique pertinente</p>
	<% end %>
  <% end %>
</div>
