<div class="critique" id="critique<%= review.to_param%>">
  <div class="name">
    <span class="right">
      <%= image_tag 'smiley_yes.png', :class => 'smiley' %>
      <%= review.like_count %>
      <%= image_tag 'smiley_no.png', :class => 'smiley' %>
      <%= review.dislike_count %>
    </span>
    <%= link_to review.customer ? review.customer.first_name : review.customers_name, customer_reviews_path(:customer_id => review.customer.to_param) %>
    <span>
      <img src="/images/delimiter.gif" alt="" />
    </span>
    <%= "#{t '.published_on'} #{review.created_at.strftime("%d/%m/%Y")}" %>
    <span class="stars"><%= product_review_stars(review, params[:kind]) %></span>
  </div>
  <p><%= review.text %></p>
  <% if current_customer %>
  <% customer_rating = review.rating_by_customer(current_customer) %>
    <p class="yn">
      <% if customer_rating %>
        <%= customer_rating.value == 1 ? t('.relevant') : t('.not_relevant') %>
      <% else %>
        <%= link_to image_tag('smiley_yes.png', :class => 'smiley'), review_review_rating_path(:review_id => review, :rate => 1), :class => 'yes', :review_id => review.reviews_id %>
        <%= link_to t('.agree'), review_review_rating_path(:review_id => review, :rate => 1), :class => 'yes', :review_id => review.reviews_id %>
        <%= link_to image_tag('smiley_no.png', :class => 'smiley'), review_review_rating_path(:review_id => review, :rate => 0), :class => 'no', :review_id => review.reviews_id %>
        <%= link_to t('.disagree'), review_review_rating_path(:review_id => review, :rate => 0), :class => 'no', :review_id => review.reviews_id %>
      <% end %>
    </p>
  <% end %>
</div>
