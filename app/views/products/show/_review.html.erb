<div class="critique" id="critique<%= review.to_param%>">
  <div class="name">
    <span class="right">
      <%= "#{review.like_count} #{t '.members'} #{review.likeable_count} #{t '.found_useful'}" %>
    </span>
    <%= link_to review.customer.first_name, customers_reviews_path(review.customer) %>
    <span>
      <img src="/images/delimiter.gif" alt="" />
    </span>
    <%= "#{t '.published_on'} #{review.created_at.strftime("%d/%m/%Y")}" %>
    <span class="stars">
      <% review.rating.times do %>
        <%= image_tag 'sm-star-on.png' %>
      <% end %>
      <% (5-review.rating).times do %>
        <%= image_tag 'sm-star-off.png' %>
      <% end %>
    </span>
  </div>
  <p><%= review.text %></p>
  <% customer_rating = review.rating_by_customer(current_customer) %>
  <p class="yn">
    <% if customer_rating %>
      <%= customer_rating.value == 1 ? t('.relevant') : t('.not_relevant') %>
    <% else %>
      <%= t '.is_relevant' %>
      <%= link_to t('.agree'), review_review_rating_path(:review_id => review), :class => 'yes', :review_id => review.reviews_id, :rate => 1 %>
      -
      <%= link_to t('.disagree'), review_review_rating_path(:review_id => review), :class => 'no', :review_id => review.reviews_id, :rate => 0 %>
    <% end %>
  </p>
</div>
