<% if movie_detail %>
<% product = movie_detail %>
<% path = product_path(:id => product.to_param, :recommendation => @source) %>
<% if product.streaming? %>
  <% @token = current_customer ? current_customer.get_token(product.imdb_id) : nil %>
<% end %>
<% view = params[:view_mode] == 'streaming' || params[:filter] == 'vod' ? 0 : 1 %>
<% name = "#{I18n.locale}/products/product3_#{ENV['HOST_OK']}_#{view}_#{product.id}" %>
<% name_path = "views/#{name}" %>
<% if product.cached_at && product.products_last_modified && product.cached_at < product.products_last_modified %>
  <% expire_fragment(product) %>
<% end %>
<% unless Rails.cache.exist? name_path %>
  <% product.update_attributes(:cached_at => Time.now.to_s(:db)) %>
<% end %>
<%= "#{product.imdb_id}" if Rails.env == "pre_production" %>
<% data = product.description_data(true) %>
<% product_title = data[:title] %>
<% product_image = data[:image] %>
<% product_description = data[:description] %>
<% media = jacket_mode == :streaming || product.vod? ? 'vod' : product_media_id(product.media) %>

<div class="movie-wrap">
	<div class="movie-ttl">
  	<h3><%= link_to product_title, path %> <%= image_tag "3d_icon.png" if product.bluray3d? %> <%= image_tag "3d2d_icon.png" if product.bluray3d2d? %></h3>
    <div class="osc"><%= category(product, @category) %></div>
    <div class="stars vote" id="rating-stars-<%= product.id %>" product_id="<%= product.id %>">
      &nbsp;<%= render :partial => 'products/rating', :locals => {:product => product, :background => rating_color} %>
    </div>
  </div><!-- .movie-ttl -->
  <div class="movie-content">
  	<div class="movie-descr">
      	<p><%= truncate_html(product_description.text, :length => 300) %></p>
          <%= link_to(t('.more'), path, :class => 'osc') %>
          <div class="thumb-wrap">
            <% link_to path, :class => :cover, :alt => product_title do %>
              <%= product_image_tag product_image, :width => 62, :height => 95 %>
            <% end %>
            <span class="<%= media %> osc"><%= media %></span>
          </div>
      </div><!-- .movie-descr -->
      
      <div class="cast">
        <% if product.actors.count > 0  %>
        <h4><%= t '.actors' %></h4>
        <p><%= product.actors.limit(8).collect{|actor| link_to actor.name, actor_products_path(:actor_id => actor.to_param)}.join(', ') %></p>
        <% end %>
        <% if product.director %>
          <h4><%= t '.director' %></h4>
          <p><%= link_to product.director.name, director_products_path(:director_id => product.director.to_param) %></p>
        <% end %>
      </div>
      <div class="oters">
      	<ul class="lang">
          	<li class="left dark osc"><%= product.public.name if product.public %></li>
          	<%= bubbles(product) %>
          </ul>
           <div class="links" id="seen-uninterested-<%= product.to_param %>">
              <%= render :partial => 'products/show/seen_uninterested', :locals => {:product => product} %>
            </div>
          <ul class="btns osc">
          	<li><a href="#" class="ajouter">Ajouter</a></li>
              <li>
                <%= render :partial => 'products/streaming',  :locals => {:product => product, :token => @token, :text => :short} %>
              </li>
              <li><a href="#" class="trailer">Bande d'annonce</a></li>
          </ul>
      </div><!-- .oters -->
  </div><!-- .movie-content -->
</div><!-- .movie-wrap -->
<% end %>