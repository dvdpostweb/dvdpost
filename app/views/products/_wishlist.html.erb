<% media = DVDPost.product_types.invert[product.media] %>
<% class_name = params[:controller] == 'home' ? '' : 'osc' %>

<% if current_customer && ENV['HOST_OK'] == "0" %>
  <% load_color = load_color || :normal %>
  <% title = title_add_to_wishlist(text, :normal, media) %>
  <% long_title = title_add_to_wishlist(:long, :normal, media) %>
  <% submit_id = "p_#{product.to_param}_#{rand(10)}"%>
  <%= link_to title, new_product_wishlist_item_path(:product_id => product.to_param, :source => source, :submit_id => submit_id, :text => text, :load_color => load_color, :response_id => response_id), :class => "#{class_name} ajouter add_to_wishlist_button", :id => submit_id, :title => long_title%>
<% else %>
  <% title = title_add_to_wishlist(text, :normal, media) %>
  <% path = mobile_request? ? login_path : product_step_path(:product_id => product) %>
  <%= link_to title, path, :class => 'ajouter', :id => 'normal' %>
<% end %>
