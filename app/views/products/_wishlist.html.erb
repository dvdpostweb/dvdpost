<% if current_customer.wishlist_products.include?(product) %>
  <% title = title_remove_from_wishlist(text) %>
  <% wishlist_item = current_customer.wishlist_items.find_by_product_id(product.to_param) %>
  <%= link_to title, wishlist_item_path(:id => wishlist_item.to_param), :method => :delete, :class => 'btn_remove wishlist_button' %>
<% else %>
  <% title = title_add_to_wishlist(text) %>
  <%= link_to title, new_product_wishlist_item_path(:product_id => product.to_param, :source => source), :class => 'btn add_to_wishlist_button' %>
<% end %>
