<% media = DVDPost.product_types.invert[product.media] %>
<% if current_customer && ENV['HOST_OK'] == "0" %>
  <% load_color = load_color || :normal %>
  <% title = title_add_to_wishlist(text, :normal, media) %>
  <% long_title = title_add_to_wishlist(:long, :normal, media) %>
  <% submit_id = "p_#{product.to_param}_#{rand(10)}"%>
  <%= link_to title, new_product_wishlist_item_path(:product_id => product.to_param, :source => source, :submit_id => submit_id, :text => text, :load_color => load_color), :class => "osc ajouter add_to_wishlist_button", :id => submit_id, :title => long_title%>
<% else %>
  <% title = title_add_to_wishlist(text, :normal, media) %>
  <%= link_to title, php_path('step1.php'), :class => 'ajouter', :id => 'normal'%>
<% end %>
