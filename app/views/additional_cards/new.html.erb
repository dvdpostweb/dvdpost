<div id='additional_div'>
  <% if @number < 5%>
    <div id="addwishlist_subtitle">
      <p align="center">
  	    <%= t ".title" %>
      </p>
    </div>
    <% form_for @addition_card, :url => sponsorships_additional_card_path do |f|%>
    	<p>
    	  <div id="additional">
    	    <%= error_messages_for :addition_card %>
    	  </div>
      	<table align='center'>
      	  <tr>
      	  </tr>
      	  <tr>
            <% total=(5 - @number) %>
            <% for n in 1..total %>
            	<td align="center">
            	  <%= f.radio_button :number, n %>
            	</td>
            <% end %>
          </tr>
          <tr>
            <% for n in 1..total %>
            	<td align="center"><%= n %></td>
            <% end %>
          </tr>
        </table>
      </p>
      <p align="center">
        <%= f.hidden_field :campaign, :value => DVDPostConfig[:default_campaign_gfc] %>
        <%= submit_tag t('.confirm'), :id => 'submit_additional' %>
      </p>
    <% end %>
  <% else %>
    <p align='center'>
      <%= t ".not_available"%>
    </p>
  <%end%>
</div>