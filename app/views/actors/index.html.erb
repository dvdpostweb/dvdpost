<div class="container2">
  <%= render :partial => '/actors/menu' %>
  <p id="letters">
    <% ('a'..'z').each do |l| %>
      <%= link_to l.upcase, actors_path(:letter => l) %> |
    <% end %>
  </p>
  <ul id="search-performers" class ="<%= params[:letter] ? :letter : :all %>">
  <% if @actors %>  
  <% @actors.each do |key , value|  %>
    <%= render :partial => '/actors/index/actors', :locals => { :details => value, :letter => key, :type => params[:letter] ? :letter : :all} %>
  <% end %>
  <% end %>
  </ul>
</div>