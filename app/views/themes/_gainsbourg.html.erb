<br />
<div>
  <div>
    <%= image_tag "#{DVDPost.images_path}/themes/#{I18n.locale}/page/#{theme.to_param}.jpg", :width => 970 %>
  </div>
  
  <div class="category_theme">
    <div class='center'>
      <%=  link_to(image_tag("#{DVDPost.images_path}/themes/#{I18n.locale}/page/#{theme.to_param}_film.jpg"), product_path(:locale=> I18n.locale, :id => 120196))  %>
    </div>
    <% @list.collect do | item |%>
    <span>
    <h3 style="background: url(<%= "#{DVDPost.images_path}/themes/#{I18n.locale}/page/#{theme.to_param}_title.jpg" %>) no-repeat left bottom"><%= item.name %></h3>
    </span>
    <div class="selection_theme" style="border:1px solid <%= theme.page_border_color %>;" id ="carousel">
      <ul>
        <%= render :partial => 'themes/product', :collection => item.products %>
      </ul>       
      <div style="clear:both"></div>
    </div>                
    <% end %>                                               
  </div>
</div>