<div class="switch_dom" id="switch_dom">
  <div id="title"><%= t '.title' %></div>
  <div style="margin-left: 20px; width: 800px;">
   <% form_for(:customer, :url => customer_payment_methods_path(:customer_id => current_customer.to_param), :html => { :method => :put, :id => :credit_card }) do |f| %>
    <div style="width: 800px;" > <img src="/images/card.png" style="float: left; padding-right: 10px;">
      <p>
      <h3><%= t '.credit_card' %></h3>
      </p>
      <p><%= t '.credit_card_redirect' %></p>
    </div>
    <table class="brand">
      <tbody>
        <tr height="50">
          <td width="22"><input id="visa" name="brand" value="VISA" type="radio"></td>
          <td width="71"><%= image_tag 'visa_icon.png', :alt => 'visa' %></td>
          <td width="22"><input id="master" name="brand" value="Mastercard" type="radio"></td>
          <td width="71"><%= image_tag 'master_card_icon.png', :alt => 'master_card_icon' %></td>
          <td width="22"><input id="amex" name="brand" value="American Express" type="radio"></td>
          <td width="71"><%= image_tag 'american-express_icon.png', :alt => 'american-express_icon' %></td>
        </tr>
        <tr>
          <td></td>
          <td width="71">Visa</td>
          <td></td>
          <td width="71">Eurocard Mastercard</td>
          <td></td>
          <td width="71">American Express</td>          
        </tr>
      </tbody>
    </table>
    <div class="brand" style="padding-right: 8px;">
    <table cellspacing="0" cellpadding="0">

      <tr>
        <td align="left"><img width="130" height="66" align="left" style="padding-right: 25px;" src="http://www.dvdpost.be/images/www3/languages/french/images/buttons/canvas/logo_ogone_big.gif"></td>
        <td align="right">
          <%= link_to t('.back'), edit_customer_payment_methods_path(:customer_id => current_customer.to_param), :class => :back%>
        </td>
        <td><img src="http://www.dvdpost.be/images/dvdpost_public/bg-top-nav-sep.gif"></td>
        <td style="padding-top: 10px; padding-left: 10px;">
          <button type="submit" class="button_confirm_switch"><%= t'.follow' %></button>
        </td>
      </tr>
    </table>
    </div>
    <% end %>
  </div>
  <div style="display:none" id="error">
    <%= t '.error' %>
  </div>
</div>