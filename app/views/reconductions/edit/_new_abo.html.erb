<% abo = new_abo %>
<% if ENV['HOST_OK'] == "1" || (current_customer.free_upgrade == 0 && selected_abo != abo.id) || (current_customer.free_upgrade == 1 && selected_abo < abo.id ) %>
  <% showing = @showing_abo > 0 ? true : false %>
  <% style = @all_style ? 'table_row' : get_style(current_abo_credit, abo.credits, showing)%>
  <% @showing_abo = @showing_abo - 1 if style == 'table-row' %>
  <tr class="abo" style="display:<%= style %>">
    <%= "<td width='33'><div class='check' id ='#{abo.id}'></div></td>" if ENV['HOST_OK'] == "0" %>
    <td class="films"><b><span class="title_pricing"><%= abo.credits %> <%= t 'reconductions.edit.films' %></span></b> <br />
    <span class="month"><%= t 'reconductions.edit.per_month' %></span> *</td>
    <td width="<%= ENV['HOST_OK'] == "1" ? 240 : 180 %>" class="description">
      <%= abo_details(abo,0)%>
    </td>
    
    <td align="right">
      <%= image_tag "pricing#{abo.credits}.png" %>
    </td>
    <td>
      <%= link_to t(".register"), php_path("step1.php?activation_code=free_test#{abo.credits}"), :class => "btn_price #{I18n.locale}" %>
    </td>
  </tr>  
<% end %>
