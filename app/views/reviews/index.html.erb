<%= image_tag (customer_avatar_path(:customer_id => @customer.id), :alt => 'user-thumb', :title => 'user-thumb', :width => 150) %>
<div id='title' class="reviews"><%= t '.title' %> 
<%= @customer.customer_attribute.nickname %>
<%= customer_awards(@customer, @customer.customer_attribute.points) %></div>
<div id="titles-wrap" class="reviews">
  <div class="top"></div>
<%= render :partial => '/reviews/index/review', :collection => @reviews, :locals => {:source => @source} %>
  <div class="end"></div>
</div>
<%= will_paginate @reviews, :class => 'products-pagination', :previous_label => '&nbsp;', :next_label => '&nbsp;' %>