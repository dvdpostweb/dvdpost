<div id="header" <%= "class='small'" if @hide_menu %>>
  <h1>
    <% theme_logo = @theme && @theme.logo_image == 1 ? "background:url('#{@theme.image_logo}') no-repeat;" : "" %>
    <%= link_to t('.tagline'), root_path, :class => 'f-btn', :style => theme_logo %>
  </h1>
  <ul id="login">
    <% if current_customer %>
      <li><%= "#{link_to t('.logout'), sign_out_path} <span>(#{current_customer.email})</span>" %></li>
    <% end %>
    <li>
      <%= switch_locale_link I18n.locale, {:id => 'lang'} %>
      <span id="lang-box">
        <% Locale.all.collect(&:short).collect do |locale| %>
          <%= switch_locale_link locale unless locale.to_s == I18n.locale.to_s %>
        <% end %>
      </span>
    </li>
    <li id="cat-link">
      <%= link_to t('.adult'), root_path(:kind => :adult) %>
    </li>
  </ul>
  <%= render :partial => 'layouts/menu2' unless @hide_menu %>
</div>
