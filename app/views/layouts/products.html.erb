<%= javascript 'products','reviews' %>
<%= javascript 'home' if ENV['HOST_OK'] == "1" %>

<% content_for :body_id do %>product_body<% end %>
<% if @product &&  @product.description %>
  <% content_for :facebook do %>
    <meta property="og:image" content="<%= @product.image %>"/> 
    <meta property="og:type" content="movie">
    <meta property="og:title" content="<%= @product.description.title %>">
    <meta property="og:url" content="<%= @public_url %>">
    <meta property="og:site_name" content="DVDPost"/>
    <meta property="fb:admins" content="542538810,586983921"/>
    <meta property="og:description" content="<%= @product.description.text %>">
  <% end %>
  <% content_for :description do %>
    <%= @product.description.text %>
  <% end%>
<% end %>
<%= render :partial => 'layouts/product_content_public' if ENV['HOST_OK'] == "1" && (request.parameters['controller'] == 'products' and request.parameters['action']=="index")%>

<%= yield %>
<% parent_layout 'application' %>
