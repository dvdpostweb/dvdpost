<% statuses = DVDPost.product_dvd_statuses.keys %>
<div id="addwishlist_title">
  <%= t '.title' %>
</div>
<div id="add_problem">
  <ul>
    <% statuses.each do |event| %>
      <li class="add_problem_space">
        <% if (@order.status.orders_status_id == 17 || @order.status.orders_status_id == 12) %>
          <%= link_to_report(t(".#{event}"), @order.to_param, event) if event.to_s == 'arrived' %>
        <% else %>
          <% if event.to_s == 'delayed' && @order.status.orders_status_id == 2 %>
            <%= link_to_report(t(".#{event}"), @order.to_param, event) %>
          <% else (event.to_s != 'arrived' && event.to_s != 'delayed')  %>
            <%= link_to_report(t(".#{event}"), @order.to_param, event) %>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
