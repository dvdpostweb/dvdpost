<h2 class="miso" id="n-c">Notes et critiques de la communaut√© DVDPost </h2>
<!-- Tabs -->
<div id="tabs-wrap" class="review_rate">
  <%= render :partial => '/home/index/menu', :locals => {:review_kind => @review_kind} %>
  <% if @review_kind == DVDPost.home_review_types[:best_rate] %>
    <%= render :partial => '/home/index/best', :locals => {:data => @data} %>
    <% elsif @review_kind == DVDPost.home_review_types[:best_review] %>
      <%= render :partial => '/home/index/coeur', :locals => {:data => @data} %>
    <% elsif @review_kind == DVDPost.home_review_types[:controverse_rate] %>
      <%= render :partial => '/home/index/controverse', :locals => {:data => @data} %>
    <% else %>
      <%= render :partial => '/home/index/best_customer', :locals => {:data => @data} %>
  <% end %>
</div>