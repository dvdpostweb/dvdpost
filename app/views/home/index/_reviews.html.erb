<div id="community-wrap">
  <h2><%= t('.title') %></h2>
  <div class="tab-container">
    <%= render :partial => '/home/index/menu', :locals => {:review_kind => review_kind} %>
    <div class="panel-container" id='review_tab'>
      <% if DVDPost.home_review_types[review_kind] == DVDPost.home_review_types[:best_customer] %>
        <%= render :partial => '/home/index/best_customer', :locals => {:data_month => data_month, :data_all => data_all} %>
      <% elsif DVDPost.home_review_types[review_kind] == DVDPost.home_review_types[:best_review] %>
        <%= render :partial => '/home/index/coeur', :locals => {:data => data} %>
      <% elsif DVDPost.home_review_types[review_kind] == DVDPost.home_review_types[:controverse_rate] %>
        <%= render :partial => '/home/index/controverse', :locals => {:data => data} %>
      <% else %>
       <%= render :partial => '/home/index/best', :locals => {:data => data} %>
      <% end %>
    </div>
  </div>
</div>
