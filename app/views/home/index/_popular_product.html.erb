<% path = product_path(:id => popular_product.to_param, :recommendation => @wishlist_source[:popular]) %>
<% data = popular_product.description_data() %>
<% product_title = data[:title] %>
<% product_image = data[:image] %>
<% streaming_product = (popular_product.streaming? and streaming_access?) ? true : false %>
<li>
  <div class="stars" id="rating-stars-<%= popular_product.to_param %>" product_id ="<%= popular_product.to_param %>">
    <%= render :partial => 'products/rating', :locals => {:product => popular_product, :background => :white, :size => :small} %>
  </div>
  <% link_to path, :class => (streaming_product ? 'vod' : product_media_id(popular_product.media)) do %>
    <%= product_image_tag product_image, :width => 76, :height => 118, :alt => "#{product_title} (#{popular_product.year})" %>
  <% end %>
  <%= render :partial => 'products/hybrid', :locals => {:product => popular_product, :text => :short, :source => @wishlist_source[:popular], :streaming_product => streaming_product }  %>
  <%= link_to product_title, path, :class => 'more' %>
</li>
