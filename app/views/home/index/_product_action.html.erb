<% if item.in_streaming_or_soon?(params[:kind], session[:country_id]) && streaming_access? %>
  <% if item.streaming?(params[:kind], session[:country_id]) %>
      <% token = current_customer ? current_customer.get_token(item.imdb_id) : nil %>
    <%= render :partial => 'products/streaming', :locals => {:product => item, :token => @token, :text => :short, :source => @wishlist_source[:recommendation_hp], :response_id => params[:response_id] } %>
  <% end %>
<% end %>
<span class="ajouter">
  <%= render :partial => 'products/wishlist', :locals => {:product => item, :text => :short, :source => @wishlist_source[:recommendation_hp], :response_id => params[:response_id]} %>
</span>
<div class="action">
  <% if current_customer %>
  <div class="links" id="seen-uninterested-<%= item.to_param %>">
    <%= render :partial => 'products/show/seen_uninterested', :locals => {:product => item, :source => @wishlist_source[:recommendation_hp], :response_id => params[:response_id]} %>
  </div>
  <% end %>
</div>