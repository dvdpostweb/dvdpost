<% path = item.imdb_id > 0 ? products_path(:imdb_id => item.imdb_id) : path %>
<% if item.in_streaming_or_soon? && streaming_access? %>
  <% if item.streaming? %>
      <% token = current_customer ? current_customer.get_token(item.imdb_id) : nil %>
    <%= render :partial => 'products/streaming', :locals => {:product => item, :token => @token, :text => :short } %>
  <% end %>
<% end %>
<span class="ajouter">
  <%= render :partial => 'products/wishlist', :locals => {:product => item, :text => :short, :source => @wishlist_source[:recommendation]} %>
</span>
<div class="action">
  <% if current_customer %>
  <div class="links" id="seen-uninterested-<%= item.to_param %>">
    <%= render :partial => 'products/show/seen_uninterested', :locals => {:product => item} %>
  </div>
  <% end %>
</div>