<div id="newsletter-wrap" class="osc">
 	<h3>LISTE DES DERNIERES NEWS</h3>
  <ul>
    <% news.each do |n| %>
      <% first = n.contents.by_language(I18n.locale).first  %>
      <% path = newsletter_path(:id => n.to_param) %>
   	  <li>
   	    <%= link_to image_tag(first.thumbs.url(:small), :size => "62x41"), path %>
   	    <span>
   	      <%= link_to first.title,  path, :class => :no_bold %> 
   	      <%= link_to 'Lire la newsletter',  path %>
   	    </span>
   	  </li>
    <% end %>
  </ul>
</div><!-- #newsletter-wrap -->
