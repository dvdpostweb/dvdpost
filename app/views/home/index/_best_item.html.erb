<% product = best_item.product %>
<% if product %>
  <% product_title = product.title %>
  <li>
    <h2><%= link_to product_title, product_path(:id => product.to_param, :source => @wishlist_source[:best_reviews]) %></h2>
    <div class="content"> 
      <%= review_image_links((best_item.average*2).round) %> 
    <div class="average_review">(<%= best_item.average %> <%= t('.avg') %>)</div>
    <div><span class="month_review"><%= best_item.count %> <%= rating_title(best_item.count) %></span> <br /><%= t('.avg_month') %>
    </div>
    <%= render :partial => 'products/wishlist', :locals => {:product => product, :text => :short, :source => @wishlist_source[:best_reviews]} %>
    </div>
    <div class="thumb"> 
      <%= link_to product_image_tag(product.image, :width => 76, :height => 116, :alt => "#{product_title} (#{product.year})"), product_path(:id => product.to_param, :source => @wishlist_source[:best_reviews]) %>
      <div class="stat-wrap">
        <h4><%= best_item.rank %></h4>
        <%= new_position(best_item) %>
      </div> 
    </div>
  </li>
<% end %>