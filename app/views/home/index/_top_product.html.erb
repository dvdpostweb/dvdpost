<% item_number = top_product_counter + 1 %>
<% data = top_product.description_data(true) %>
<% product_title = data[:title] %>
<% product_image = data[:image] %>
<% description = data[:description] %>

<% if item_number == 1 %>
  <div class="top10 first">
    <h2>
      <%= link_to product_title, product_path(:id => top_product.to_param) %>
    </h2>
    <div class="stars" id="rating-stars-<%= top_product.to_param %>" product_id ="<%= top_product.to_param %>">
      <%= render :partial => 'products/rating', :locals => {:product => top_product, :background => :black} %>
    </div>
    <p>
      <%= t '.by' %>
      <%= link_to top_product.director.name, director_products_path(:director_id => top_product.director.to_param) if top_product.director %>
    </p>
    <p>
      <%= t '.actors' %>
      <%= top_product.actors.collect{|actor| link_to actor.name, actor_products_path(:actor_id => actor.to_param)}.join(', ') %>
    </p>
    <p><%= truncate_html(description.text, :length => 300) %></p>
    <%= render :partial => 'products/wishlist', :locals => {:product => top_product, :text => :short, :source => @wishlist_source[:top], :load_color => :black} %>
    <% link_to product_path(:id => top_product.to_param), :class => "cover #{product_media_id(top_product.media)}" do %>
      <%= product_image_tag product_image, :width => 76, :height => 118 %>
    <% end %>
    <%= image_tag "#{item_number}.png", :alt => item_number, :class => 'number'%>
  </div>
<% else %>
  <div class="top10<%= item_number == 10 ? ' last' : '' %>">
    <h2><%= link_to product_title, product_path(:id => top_product.to_param) %></h2>
    <p class='top-description' style="display:none"><%= truncate_html(description.text, :length => 300) %></p>
    <%= render :partial => 'products/wishlist', :locals => {:product => top_product, :text => :short, :source => @wishlist_source[:top]} %>
    <%= image_tag "#{item_number}.gif", :alt => item_number, :class => 'number'%>
    <%= link_to 'Toggle', product_path(:id => top_product.to_param), :class => 't-arrow open' %>
  </div>
<% end %>
<!-- tooglle class = open when open -->