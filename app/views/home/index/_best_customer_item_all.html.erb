  <% customer = best_customer_item_all.customer %>
  <% reviews_count = customer.reviews.approved.count %>
	<li>
		<span class="count"><%= best_customer_item_all.rank %></span>
		<div class="content">
      <h2>
        <%= link_to customer.nickname, customer_reviews_path(:customer_id => customer.customers_id), :class => :nickname  %>
      </h2>
      <%= customer_awards(customer, customer.customer_attribute.points) %>
			<% if reviews_count > 0 %>
			  <p><%= customer.ratings.count %> <%= t 'home.reviews.rating' %> |  <%= reviews_count %> <%= t 'home.reviews.critics' %> </p>
			  <%= link_to t('home.reviews.all_critics'), customer_reviews_path(:customer_id => customer.to_param), :class => :left_review %>
			<% else %>
		    <p><%= customer.ratings.count %> <%= t 'home.reviews.rating' %></p>
		  <% end %>
		</div>
		<%= new_position(best_customer_item_all) %>
		<%= link_to image_tag (customer.image, :alt => 'user-thumb', :title => 'user-thumb', :width => 56), customer_reviews_path(:customer_id => customer.customers_id) %>
	</li>
