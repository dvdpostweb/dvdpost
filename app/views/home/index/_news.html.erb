<div id="news">
  <ul class="ttls-nav" id="fl-news">
    <li>
      <h3>Flash News</h3>
    </li>
    <% if news_items %>
      <li>
        <%= will_paginate news_items, :previous_label => '',
                                      :next_label => t('.other_publications'),
                                      :page_links => false,
                                      :param_name => :news_page,
                                      :id => 'news_next',
                                      :container => false if news_items %>
      </li>
    <% else %>
      <%= t '.news_unavailable' %>
    <% end %>
  </ul>
  <ul id="flash-news">
    <% if news_items %>
      <%= render :partial => '/home/index/news_item', :collection => news_items if news_items %>
    <% else %>
      <br />
      <p class="error">
        <%= t '.news_unavailable' %>
      </p>
    <% end %>
  </ul>
</div>
