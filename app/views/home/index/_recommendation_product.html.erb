<% path = product_path(:id => recommendation_product.to_param, :recommendation => @wishlist_source[:recommendation]) %>
<% data = recommendation_product.description_data() %>
<% product_title = data[:title] %>
<% product_image = data[:image] %>
<% streaming_product = (recommendation_product.streaming? and streaming_access?) ? true : false %>
<li>
  <div class="stars" id="rating-stars-<%= recommendation_product.to_param %>" product_id ="<%= recommendation_product.to_param %>">
    <%= render :partial => 'products/rating', :locals => {:product => recommendation_product, :background => :white, :size => :small, :recommendation => 1} %>
  </div>
  <% link_to path, :class => (streaming_product ? 'vod' : product_media_id(recommendation_product.media)) do %>
    <%= product_image_tag product_image, :width => 76, :height => 118, :alt => "#{product_title} (#{recommendation_product.year})" %>
    <%= content_tag(:span, '', :class => 'new') if recommendation_product.is_new? %>
  <% end %>
  <%= render :partial => 'products/hybrid', :locals => {:product => recommendation_product, :text => :short, :source => @wishlist_source[:recommendation], :streaming_product => streaming_product} %>
  <%= link_to product_title, path, :class => 'more' %>
</li>
