<% path = carousel_path(carousel_item) %>
<% counter = carousel_item_counter %>
<% link = "<strong>#{t("home.index.carousel_item.link_#{carousel_item.id}")}</strong>" %>
<div id="slide<%= counter %>" class="slide">
  <div class="caption">
    <h2><%= t("home.index.carousel_item_title.title_#{carousel_item.id}") %></h2>
    <p><%=  t("home.index.carousel_item.name_#{carousel_item.id}") %></p>
    <%= link_to link, path, :class => "btn#{carousel_item.kind == 'TRAILER' ? ' trailer': ''}" %> 
  </div>
  <%= link_to image_tag(carousel_item.image, :alt => carousel_item.name), path %>
</div>
