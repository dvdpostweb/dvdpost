<% path = carousel_path(carousel_item) %>
<% counter = carousel_item_counter + 1 %>
<div class="panel" id ="panel<%= counter %>">
  <div class="capt">
    <h2><%= link_to t(".name_#{carousel_item.id}"), path %></h2>
    <ul>
      <li>
        <%= link_to t(".link_#{carousel_item.id}"), path, :class => :rent %>
      </li>
      <% if carousel_item.kind == 'MOVIE' && carousel_item.product.trailer %>
      <li class="delim"></li>
      <li>
        <%= link_to(t('.trailer'), product_trailer_path(:product_id => carousel_item.product.to_param), {:class => 'trailer', :target => :_blank}) %>
      </li>
      <% end %>
    </ul>
  </div>
  <%= link_to image_tag(carousel_item.image, :alt => carousel_item.name), path %>
</div>
