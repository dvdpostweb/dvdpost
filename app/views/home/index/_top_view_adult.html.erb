<div class="top-wrap" id="top-rents">
  <div class="ttl pie">Top des plus lou√©s</div>
  <div class="top pie"> 
    <span class="thumb">
      <% link_to product_path(:id => products.first.to_param), :id => :top_product_link do %>
        <%= image_tag products.first.image, :title => products.first.title, :width => 130, :height => 184, :id => :top_product %>
      <% end %>
    </span>
    <ul>
      <% i = 0 %>
      <% products.collect do |product| %>
      <% i += 1 %>
      <% number = i <10 ? "0#{i}" : i %>
      <li id = '<%= product.to_param %>'>
        <a href="<%= product_path(:id => product.to_param) %>" class="top_products" id="<%= product.description.image %>">
          <span class="number"><%= number %>.</span> <%= truncate(product.title, :length => 30) %>
        </a>
        <span class="rating" id="rating-stars-<%= product.to_param %>" product_id ="<%= product.to_param %>">
          <%= render :partial => 'products/rating', :locals => {:product => product, :background => :pink, :size => :small} %>
        </span>
        </li>
      <% end %>
    </ul>
  </div>
</div>