<div id="top-loues-wrap">
  <div class="ttl"><%= t('.title') %></div>
  <div id="top-loues" class="clearfix">
    <ul>
      <% i = 0 %>
      <% products.collect do |product| %>
      <% i += 1 %>
      <% number = i <10 ? "0#{i}" : i %>
        <li id = '<%= product.to_param %>'>
          <a href="<%= product_path(:id => product.to_param) %>" class="top_products" id="<%= product.description.image %>">
            <span class="number"><%= number %>.</span> <%= truncate(product.title, :length => 25) %>
          </a>
          </li>
        <% end %>
    </ul>
    <div class="thumb-wrap">
      <% link_to product_path(:id => products.first.to_param, :top => 1), :id => :top_product_link do %>
        <%= image_tag products.first.image, :title => products.first.title, :width => 133, :height => 200, :id => :top_product %>
      <% end %>
    </div>
  </div>
</div>
<div class="clear"></div>