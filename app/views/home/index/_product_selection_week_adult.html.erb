<% class_name = params[:selection_kind] || @default %>
<% product = product_selection_week_adult %>
<% name = "#{I18n.locale}/products/selection_#{ENV['HOST_OK']}_#{class_name}_#{product.id}" %>
<% name_path = "views/#{name}" %>

<% cache name do %>
  <% data = product.description_data(true) %>
  <% product_title = data[:title] %>
  <% product_image = data[:image] %>
  <% description = data[:description] %>
  <li class="<%= class_name %>">
    <h3><%= link_to product_title, product_path(:id => product.to_param) %></h3>
    <div class="wrap">
      <h4><%= product.categories.active.first.name unless product.categories.active.empty? %></h4>
      <p><%= truncate(description.text, :length => 120) %> </p>
      <%= link_to(t('.trailer'), product_trailer_path(:product_id => product.to_param), :class => 'more trailer', :target => :_blank) if product.trailer %> 
      <%= link_to image_tag(product.image_detail, :class=>"thumb", :width => 107), product_path(:id => product.to_param, :source => @wishlist_source[:week_selection]) %> 
    </div>
  </li>
<% end %>