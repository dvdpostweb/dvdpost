<!--   ==============   MAIN CONTENT   ==============   -->
<div id="maincontent">
  <div class="top"></div>
  <% if current_customer.suspended? %>
    <ul id='suspended'>
      <li><%= current_customer.suspended_notification %></li>
    </ul>
  <% end %>
  <!-- Tabs rotattor -->
  <%= render :partial => 'home/index/carousel', :locals => {:carousel => @carousel} %>
  <!-- BIENVENUE  -->
  <%= render :partial => '/home/index/wishlist', :locals => {:wishlist_count => @wishlist_count, :transit_items => @transit_items, :transit_items_count => @transit_items_count} %>

  <!-- Flash News  -->
  <%= render :partial => '/home/index/news', :locals => {:news_items => @news_items} %>
  <!-- Recommandations  -->
  <%= render :partial => 'home/index/recommendations', :locals => {:products => @recommendations} %>

  <!-- Top 10  -->
  <%= render :partial => 'home/index/top10', :locals => {:products => @top10} %>

  <!-- Banners  -->
  <div id="banners">
    <%= render :partial => 'home/index/banner', :locals => {:type => 'quizz'} %>
    <%= render :partial => 'home/index/banner', :locals => {:type => 'contest'} %>
    <%= render :partial => 'home/index/banner', :locals => {:type => 'shop'} %>
    <%= render :partial => 'home/index/banner', :locals => {:type => 'community'} %>
  </div>

  <!-- Prochainement/NouveautÃ©s   -->
  <div id="new-m">
    <%= render :partial => 'home/index/theme', :locals => {:products => @soon, :id => 'soon'} %>
    <%= render :partial => 'home/index/theme', :locals => {:products => @new,  :id => 'nouv'} %>
  </div>

  <div class="clear"></div>
  <div class="end"></div>
</div>
<!--   ==============   END MAIN CONTENT   ==============   -->
