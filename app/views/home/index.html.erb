<div id="maincontent" >
  <div class="top"></div>

  <!-- Tabs rotattor -->
  <%= render :partial => 'home/index/carousel' %>
  <!-- BIENVENUE  -->
  <%= render :partial => '/home/index/wishlist', :locals => {:wishlist_count => @wishlist_count, :transit_items => @transit_items} %>

  <!-- Flash News  -->
  <%= render :partial => '/home/index/news', :locals => {:news_items => @news_items} %>
  <!-- Recommandations  -->
