<% item = item_gallery %>
<% expire = item.streaming_products.available.first.expire_at if item.streaming_products.available.count > 0 %>
<% product = item.products.first %>
<% image_tag(product.image)+"<br />" if display_vod == 1 %>
<% product_title = product.title %> 
<% expire if expire && 2.weeks.from_now.localtime > expire %>
  <div class="vod" id = "<%= "div_#{item.to_param}" %>">
		<div class="status">
		  <% if type == :token %>
			  <span class="alert"><%= time_left(item, :normal)%></span>
			<% end %>
		  <%= "<strong class='alert'>jusqu'au #{expire.strftime("%d/%m/%Y")}</strong>" if expire && 2.weeks.from_now.localtime > expire && type != :token %>
		  <% if type != :token %>
  			<span class="trash">
          <% form_for(:vod_wishlists, :url => vod_wishlist_path(:id => item.to_param), :html => {:method => :delete, :id => "form_#{item.to_param}", :class => 'remvove_from_wishlist_form'}) do |f|%>
              <%= hidden_field_tag :list, 2 %>
              <%= hidden_field_tag :div, "div_#{item.to_param}" %>
            <span id ="<%= "p_#{item.to_param}" %>">
              <%= submit_tag "trash: #{product_title}", :id => "sub_#{item.to_param}", :class => 'remvove_from_wishlist wishlist_remove' %>
            </span>
          <% end %>
        </span>
      <% end %>
		</div>
		<%= link_to image_tag(product.image, :alt => product_title, :size => "95x137"), product_path(:id => product.to_param)  %>
		
		  <% if type != :soon %>
		  <p class="status">
		    <% @token = current_customer.get_token(item.imdb_id) %>
		    <%= render :partial => 'products/streaming', :locals => {:product => product, :token => @token, :text => :short} %>
		  </p>
		  <% end %>
		<div class="title">
		  <%= link_to product_title, product_path(:id => product.to_param) %>
		</div>
	</div>	