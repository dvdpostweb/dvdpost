<tr<%= " class='new'" if message.message_tickets.unread.count > 0 %>>
  <td>
    <%= message.id %>
  </td>
  <td>
    <% link_to message_path(:id => message.to_param), :class => 'show' do %>
      <% if message.title %>
        <%= h message.title %>
      <% else %>
        <%= h (t("message.show.category_#{message.category_ticket_id}")) if message.category_ticket %>
      <% end %>
    <% end %>
  </td>
  <td>
    <%= message.created_at.strftime("%d/%m/%Y") %>
  </td>
  <td class="center">
    <%= image_tag 'check-orb-icon.png' if message.updated_at %>
  </td>
  <td class="center">
    <%= link_to image_tag('zoom-icon.gif'), message_path(:id => message.to_param), :class => 'show' %>
  </td>
  <td class="center">
    <label>
      <%= check_box_tag 'checkbox', message_path(:id => message.to_param), false, :class => 'trash', :id => nil %>
    </label>
  </td>
</tr>
