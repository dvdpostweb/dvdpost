<tr class="<%= message.message_tickets.unread.count > 0 ? 'close' : 'open' %>">
  <td><%= message.id %> </td>
  <td align="left">
    <img src="/images/enveloppe_<%= message.message_tickets.unread.count > 0 ? 'close' : 'open' %>.gif" align="absmiddle" />
    <% link_to message_path(:id => message.to_param), :class => 'show' do %>
      <% if message.title %>
        <%= h message.title %>
      <% else %>
        <%= h (t("message.show.category_#{message.category_ticket_id}")) if message.category_ticket %>
      <% end %>
    <% end %>
  </td>
  <td> <%= message.created_at.strftime("%d/%m/%Y") %> </td>
  <td class="center">
    <label>
    <%= check_box_tag 'checkbox', message_path(:id => message.to_param), false, :class => 'trash', :id => nil %>
    </label>
  </td>
</tr>