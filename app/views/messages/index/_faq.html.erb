<div id="faq">
  <ul id="faq-nav">
    <% @faqs.each_with_index do |faq, i| %>
      <% unless nederlands? && i == 1 %>
        <li>
          <a href="#" class='menu_faq'>
            <%= t(".cat_#{faq.to_param}") %>
          </a>
          <ul style='display:none'>
              <% faq.nb_questions.times do |i| %>          
                <li>
                  <a href="#" class="q" id="<%= "q#{faq.to_param}_#{(i+1)}" %>"><%= t_nl(".q#{faq.to_param}_#{(i+1)}") %></a>
                </li>
              <% end %>
          </ul>
        </li>
      <% end %>
    <% end %>
  </ul>
  <% @faqs.each do |faq| %>
    <% faq.nb_questions.times do |i| %>
      <div class="faq-answer" id ="<%= "r#{faq.to_param}_#{(i+1)}" %>" style="display:none">
        <h3><%= t_nl(".q#{faq.to_param}_#{(i+1)}") %></h3>
        <div class="box">
          <%= t_nl(".r#{faq.to_param}_#{(i+1)}", :stream_link => products_path(:view_mode => :streaming) , :reconduction_link =>  edit_customer_reconduction_path(:locale => I18n.locale, :customer_id => current_customer ? current_customer.to_param : 0) , :connect_link => info_path(:page_name => 'get_connected')) %>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="clear"></div>
</div>
