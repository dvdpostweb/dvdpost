<% item = item_admin%>
<tr>
    <% if Translation.find_all_by_tr_key("event_name_#{item.id}").count > 0 %>
      <td>
      <%= link_to item.name, theme_texts_path(:theme_id => item.id) %>
      </td>
      <td>
      <%= link_to 'edit', edit_theme_texts_path(:theme_id => item.id) %>
      </td>
      <% else %>
  <td><%= item.name %></td>
  <td><%= link_to 'new', new_theme_texts_path(:theme_id => item.id) %></td>
<% end %>
</tr>