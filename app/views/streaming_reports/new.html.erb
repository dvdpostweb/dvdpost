<div id="report_title"><%= "#{@product.title} " %></div>
<p>
  <%= t('.description', :title => @product.title) %> :
</p>
<% form_for @message, :url => messages_path  do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field(:category_ticket_id, :value =>  DVDPost.message_categories[:vod]) %>
  <%= hidden_field_tag :add_on, "$$$product_id$$$:::#{@product.id};;;"%>
  <%= text_area_tag 'message',nil, :cols => 44, :rows => 5 %>
  <p id='submit_align'>
    <% content_tag :button, :type => :submit, :id => :submit_report, :title => t('.send') do %>
      <%= t '.send' %>
    <% end %>
    <span><%= image_tag 'delimiter.gif', :align => :absmiddle %></span>
    <a href="#" id="cancel" title ="<%= t('.cancel') %>"><%= t('.cancel') %></a>
  </p>
<% end %>